/* pages/sale/index.wxss */
.sale-list{
  position: fixed;
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  padding:555rpx 0 127rpx 0;
  top:0;
  left:0;
  z-index: -1;
}
.sale-list .tab-t{
  width: 224rpx;
  padding:0 24rpx;
  font-size: 22rpx;
  box-sizing: border-box;
  height: 100%;
  overflow: auto;
  z-index: 1;
  position: relative;
  color: #B2B2B2;
}
.sale-list .tab-t__item{
  height: 89rpx;
  line-height: 89rpx;
  text-align: center;
  width: 166rpx;
  overflow: hidden;
}
.sale-list .tab-t__item.cur{
  background-color: #fff;
  color: #707070;
}

.sale-list .tab-c{
  position: absolute;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  top:0;
  left:0;
  padding:555rpx 0 127rpx 221rpx;
}
.tab-c__wrap{
  position: relative;
  height: 100%;
  width: 100%;
  overflow: auto;
  top:0;
  left:0;
}
.txt-todayRecommend{
  font-size:27rpx;
  color:#B2B2B2;
  padding: 20rpx 0;
}
.page-sale .tab-c__item{
  height:188rpx;
  background:#fff;
  border-radius:36rpx;
  overflow: hidden;
  position: relative;
  width:505rpx;
  margin-bottom:18rpx;
}
.tab-c__item image{
  width: 145rpx;
  height: 145rpx;
  float: left;
  margin:20rpx 24rpx 0 24rpx;
}
.page-sale .item-name{
  font-size: 27rpx;
  height: 38rpx;
}
.page-sale .item-txt{
  margin:18rpx 18rpx 18rpx 199rpx;
}
.page-sale .item-price{
  font-size: 36rpx;
  color: #ED7457;
}
.page-sale .item-price text{
  font-size: 22rpx;
}
.page-sale .item-btns{
  position: absolute;
  right:29rpx;
  bottom:24rpx;
}
.page-sale .item-star{
  height: 20rpx;
  margin-bottom:35rpx; 
  margin-top:5rpx;
}
.page-sale .cu-btn{
  height: 49rpx;
}

.order__price{
  display: flex;
  justify-content:space-between;
  font-size: 33rpx;
  margin-bottom:29rpx;
}
.padding-xl{
  padding: 30rpx 50rpx;
}
.cu-modal.bottom-modal .cu-dialog{
  border-radius:36rpx 36rpx 0px 0px;
  overflow: hidden;
}
.price-bar .cu-bar{
  justify-content: flex-end;
  background-color: #F4F4F4;
  height: 152rpx;
  line-height: 152rpx;
}
.price-bar .cu-bar .cu-btn{
  margin-right: 53rpx;
  height: 65rpx;
}

.price-bar .order__title{
  font-size: 36rpx;
}
.order__type {
  text-align: left;
  margin:40rpx 0;
}
.order__type .cu-btn{
  justify-content: flex-start;
  margin-right:27rpx;
}
.order__number{
  text-align: right;
}