.cu-bar.tabbar .action .cuIcon-cu-image-1 image{
  width: 52rpx;
  height: 59rpx;
}
.cu-bar.tabbar .action .cuIcon-cu-image-2 image{
  width: 49rpx;
  height: 57rpx;
}
.cu-bar.tabbar .action .cuIcon-cu-image-3 image{
  width: 49rpx;
  height: 57rpx;
}
.cu-bar.tabbar .action .cuIcon-cu-image-4 image{
  width: 64rpx;
  height: 65rpx;
}
.cu-bar.tabbar .action .cuIcon-cu-image-user{
  overflow: hidden;
  border-radius: 100%
}
.cu-bar.tabbar .action .cuIcon-cu-image-user image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%
}


.cu-bar{
  min-height: 130rpx;
}
.cu-bar.tabbar{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  margin: auto;
  border-radius: 32rpx 32rpx 0 0;
}
.cuIcon-cu-image .cur-img,.cuIcon-cu-image.cur .normal-img{
  display: none;
}
.cuIcon-cu-image .normal-img,.cuIcon-cu-image.cur .cur-img{
  display: inline-block;
}
.nav-text{
  font-size:24rpx;
  margin-top:5rpx;
}
