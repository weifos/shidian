/* pages/courseDetail/courseDetail.wxss */
.container {
  padding-bottom: 127rpx;
}
.course-img image{
  width: 100%;
  height: 504rpx;
}
.course-intro{
  padding: 29rpx 62rpx;
  font-size:22rpx;
  line-height: 2;
}
.course__title{
  font-size: 33rpx;
}
.course-detail{
  background-color: #fff;
  padding: 58rpx 62rpx;
  line-height: 1.5;
  font-size: 22rpx;
}
.course-detail image{
  max-width: 100%;
}
.tool-bar{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 127rpx;
  background-color: #fff;
  line-height: 127rpx;
}
.tool-bar .cu-btn{
  width: 168rpx;
  margin:0 30rpx;
}

.price-bar .cu-bar{
  justify-content: flex-end;
  background-color: #F4F4F4;
  height: 152rpx;
  line-height: 152rpx;
}
.price-bar .cu-btn{
  margin-right: 53rpx;
  height: 65rpx;
}

.order__title{
  font-size: 36rpx;
}
.order__text{
  font-size: 27rpx;
  color: #B2B2B2;
  margin-bottom: 40rpx;
}
.order__price,.order__number{
  display: flex;
  justify-content:space-between;
  font-size: 33rpx;
  margin-bottom:29rpx;
}
.price-bar .padding-xl{
  padding: 30rpx 50rpx;
}
.price-bar .cu-modal.bottom-modal .cu-dialog{
  border-radius:36rpx 36rpx 0px 0px;
  overflow: hidden;
}
