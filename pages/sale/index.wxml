<!--pages/sale/index.wxml-->
<view class=" page-sale">
  <i-greetings></i-greetings>
  <view class="swiper-banner">
    <i-swiper itemData="{{banners}}"></i-swiper>
  </view>
  <!-- sale-list s-->
  <view class="sale-list">
    <view class="tab-t">
      <view class="tab-t__item {{index == curIndex ? 'cur' : ''}}" data-id="{{item.id}}" bindtap="selectCatg" wx:for="{{result}}" wx:key="key">
        {{item.name}}
      </view>
    </view>
    <!-- tab-c s -->
    <view class="tab-c">
      <view class="tab-c__wrap">
        <!-- <view class="txt-todayRecommend">今日推荐咖啡：冰咖啡</view> -->
        <view class="tab-c__item" wx:for="{{result[curIndex].pdtList}}" wx:for-item="item" wx:key="key">
          <view class="item-img">
            <image src="{{item.img_url}}"></image>
          </view>
          <view class="item-txt">
            <view class="item-name">
              {{item.name}}
            </view>
            <view class="item-star">
              <i-star number="{{item.star}}"></i-star>
            </view>
            <view class="item-price">
              <text>￥</text>{{item.sale_price}}
            </view>
            <view class="item-btns">
              <button class="cu-btn round bg-lightYellow text-white" data-id="{{item.id}}" bindtap="showModal" data-target="bottomModal">选规格</button>
            </view>
          </view>
        </view>
      </view>
    </view>
    <!-- tab-c e -->
  </view>
  <!-- sale-list e -->
</view>
<!-- 底部 s -->
<view class="order-tool-bar">
  <view class="cu-bar tabbar">
    <view class="bg-darkGray info">待支付￥35</view>
    <view class="bg-lightYellow submit text-white">提交订单</view>
  </view>
</view>
<!-- 底部 e -->

<!-- 弹出sku-->
<i-sku itemData="{{isSelectSKU}}" :result="productDetails" ></i-sku>
 