  height: 199rpx;
}
.course__time{
  color:#9BBAFF;
  margin-top: 20rpx;
}
.course__text{
  margin-top: 5rpx;
}
.course__title{
  height: 38rpx;
}
.course__name{
  height: 34rpx;
  font-size: 24rpx;
}
.course__address{
