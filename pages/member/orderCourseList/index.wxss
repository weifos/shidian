}
.course-list{
  margin-top: 36rpx;
}
.course__item{
  overflow: hidden;
  margin: 0 0 36rpx 0;
  font-size: 27rpx;
  color: #707070;
  height: 199rpx;
  position: relative;
}
.course__image{
  float: left;
  margin-right: 36rpx;
}
.course__image image{
