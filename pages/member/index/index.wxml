<!--pages/member/index/index.wxml-->
<view class="container page-member-index">
<!-- login s -->
  <view class="member-head login" wx:if="{{userInfo.login}}">
    <view class="member-bg" style="background:#B2B2B2 url(/images/p8.png) no-repeat 0 -50rpx/100% auto;" wx:if="{{userInfo.login}}"></view>
    <view class="member__image">
      <view class="cu-avatar xl round" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big99008.jpg);"></view>
    </view>
    <view class="member__text">
        <view class="member__name">
          <text class="dib vam mr20">{{userInfo.name}}</text>
          <i-icon name="vip"></i-icon>
        </view>
        <view class="member__intro fz22 mt10">
          {{userInfo.intro}}
        </view>
    </view>
  </view>
  <!-- login e -->
  <!-- unlogin s -->
  <view class="member-head unlogin" wx:if="{{!userInfo.login}}">
      <view class="head__text">欢迎使用十点书店+</view>
      <view class="head__btns"> <button class="cu-btn round bg-lightBlue text-white">立即登录 / 注册</button></view>
  </view>
  <!-- unlogin e -->

  <view class="bg-white mt10">
    <view class="cu-list grid col-2 list1">
      <view class="cu-item" wx:for="{{list1}}" wx:key >
        <view class="item-wrap">
          <i-icon name="{{item.icon}}" class="dib icon-img vat"></i-icon>
          <view class="dib icon-name vam">{{item.name}}</view>
        </view>
      </view>
    </view>
  </view>

  <view class="bg-white mt10">
    <view class="cu-list menu list2">
      <!-- cu-item s -->
      <view class="cu-item" wx:for="{{list2}}" wx:key>
        <view class="content">
          <i-icon name="{{item.icon}}" class=" dib vat i-icon"></i-icon>
          <text class="text-grey dib vam">{{item.name}}</text>
        </view>
      </view>
      <!-- cu-item e -->
    </view>
  </view>

</view>
<i-bottombar></i-bottombar>