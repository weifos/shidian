/* pages/member/index/index.wxss */

.member-head {
  height: 299rpx;
  position: relative;
  overflow: hidden;
}

member-head.login {
  background: #b2b2b2;
  color: #fff;
}

.member-head.unlogin {
  background: #fff;
}

.member-bg {
  filter: blur(20rpx);
  position: absolute;
  width: 800rpx;
  height: 400rpx;
  left: -20rpx;
  top: -20rpx;
  opacity: 0.5;
}

.member__image {
  float: left;
  padding: 72rpx 33rpx 0 78rpx;
  z-index: 1;
  position: relative;
}

.member__text {
  padding-top: 103rpx;
  font-size: 27rpx;
  z-index: 1;
  position: relative;
}

.i-icon {
  width: 45rpx;
  text-align: center;
  margin-right: 42rpx;
  margin-left: 42rpx;
}

.list1.cu-list.grid>.cu-item {
  padding: 67rpx 0;
}

.list1 .item-wrap {
  width: 100%;
  display: block;
  font-size: 27rpx;
}

.list1 .icon-img {
  width: 45rpx;
}
.list1 .i-icon{
  margin:0
}

.list1 .icon-name {
  width: 130rpx;
  text-align: center;
}

.cu-avatar.xl {
  width: 147rpx;
  height: 147rpx;
}

.head__text {
  margin: 63rpx 0 31rpx 78rpx;
  font-size: 45rpx;
  color: #707070;
}

.head__btns {
  margin-left: 78rpx;
}

.btn-refresh {
  background: #fff;
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 30rpx;
  bottom: -5rpx;
  border-radius: 100%;
  padding: 0;
  overflow: hidden;
  background:#fff url(data:image/png;base64,) no-repeat center center/28rpx 28rpx;
}

.btn-refresh:after {
  border: none;
}

.toast_div {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: -100%;
  left: 0;
  opacity: 0;
  transition: all 250ms ease-in-out;
  z-index: 600;
}

.show_toast {
  bottom: 0 !important;
  opacity: 1;
}

.toast_div .toast_c {
  width: 68%;
  height: 330rpx;
  border-radius: 15rpx;
  background: #fff;
  position: relative;
  text-align: center;
  color: #666;
}

.toast_div .toast_c>view {
  font-size: 28rpx;
}

.toast_div .toast_c .tlt_shuf {
  font-size: 40rpx;
  color: #000;
  padding: 25rpx 0;
}

.toast_div .toast_c .toast_shuf {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx 0;
}

.toast_div .toast_c .rules {
  font-size: 32rpx;
  color: #999;
  padding: 15rpx 0;
  margin-top: 15rpx;
}

.toast_div .toast_c .fast_login {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #333;
  position: absolute;
  bottom: 0;
  border-top: 1px solid #ebebeb;
  background: #f1f1f1;
}

.icon-wrap{
  width: 44px;
}
