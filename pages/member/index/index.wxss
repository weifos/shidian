.toast_div {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: -100%;
  left: 0;
  opacity: 0;
  transition: all 250ms ease-in-out;
  z-index: 600; 
}

.show_toast {
  bottom: 0 !important;
  opacity: 1;
}

.toast_div .toast_c {
  width: 68%;
  height: 330rpx;
  border-radius: 15rpx;
  background: #fff;
  position: relative;
  text-align: center;
  color: #666;
}

.toast_div .toast_c>view {
  font-size: 28rpx;
}

.toast_div .toast_c .tlt_shuf {
  font-size: 40rpx;
  color: #000;
  padding: 25rpx 0;
}

.toast_div .toast_c .toast_shuf {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx 0;
}

.toast_div .toast_c .rules {
  font-size: 32rpx;
  color: #999;
  padding: 15rpx 0;
  margin-top: 15rpx;
}

.toast_div .toast_c .fast_login {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #333;
  position: absolute;
  bottom: 0;
  border-top: 1px solid #ebebeb;
  background: #f1f1f1;
}

